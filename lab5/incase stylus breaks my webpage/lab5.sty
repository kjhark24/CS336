 body {
        font: 24px Helvetica;
        background: #999999;
    }

    #main {
        min-height: 800px;
        margin: 0px;
        padding: 0px;
        display: flex;
        flex-flow: row;
	
    }
 
    #main > article {
 
        padding: 20px;
        border: 1px solid  #000000;
        background: #dddd88;
        flex: 3 1 60%;
        order: 2;
    }

    #main > nav {
        padding: 20px;
        border: 1px solid  #000000;
        background: #ccccff;
        flex: 1 6 20%;
        order: 1;
		text-align: right;
		font-weight: bold;
    }
  
    #main > aside {
        padding: 20px;
        border: 1px solid  #000000;
        background: #ccccff;
        flex: 1 6 20%;
        order: 3;
		font-style: italic;
    }
 
    header, footer {
        display: block;
        padding: 20px;
        min-height: 100px;
        border: 1px solid #000000;
        background: #ffeebb;
    }
	
	header {
		 font-size: 250%;
	}
	
	footer {
		 font-size: 50%;
	}
 
    /* Too narrow to support three columns */
    @media all and (max-width: 640px) {
        #main, #page {
            flex-direction: column;
        }

        #main > article, #main > nav, #main > aside {
        /* Return them to document order */
            order: 0;
        }
  
        #main > nav, #main > aside, header, footer {
            min-height: 50px;
            max-height: 80px;
			text-align: left;
        }
    }
